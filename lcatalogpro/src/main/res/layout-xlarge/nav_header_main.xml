<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/margin_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_20"
        android:paddingBottom="@dimen/margin_20">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon_image"
            android:layout_width="@dimen/margin_75"
            android:layout_height="@dimen/margin_75"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            app:srcCompat="@drawable/companyicon" />

        <RelativeLayout
            android:id="@+id/application_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/application_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/graduate"
                android:padding="@dimen/margin_2"
                android:text="@string/slide1_title"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_tab_xlarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/application_sub_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/application_name"
                android:background="@drawable/text_background_curves"
                android:fontFamily="@font/graduate"
                android:padding="@dimen/margin_2"
                android:text="@string/slide1_subtitle"
                android:textAlignment="center"
                android:textColor="@color/primary_darker"
                android:textSize="@dimen/text_tab_medium"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_2"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_6"
            android:text="@string/nav_hi"
            android:textSize="@dimen/text_tab_tootiny" />

        <TextView
            android:id="@+id/user_type_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_6"
            android:paddingTop="@dimen/margin_6"
            android:paddingEnd="@dimen/margin_0"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/text_tab_tootiny"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingTop="@dimen/margin_6"
        android:text="@string/Logged_userName"
        android:textSize="@dimen/text_tab_tootiny" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="email"
        android:gravity="start"
        android:text="@string/email_phone_number"
        android:textSize="@dimen/text_tab_tootiny" />

</LinearLayout>
