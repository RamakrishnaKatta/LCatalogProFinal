<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome_layout_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/margin_150"
            android:layout_height="@dimen/margin_150"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:padding="@dimen/margin_10"
            android:src="@drawable/companyicon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_10">

            <TextView
                android:id="@+id/txt_welcome_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/graduate"
                android:padding="@dimen/margin_2"
                android:text="@string/slide1_title"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_max"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_welcome_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_toEndOf="@id/txt_welcome_11"
                android:background="@drawable/text_background_curves"
                android:fontFamily="@font/graduate"
                android:padding="@dimen/margin_2"
                android:text="@string/slide1_subtitle"
                android:textAlignment="center"
                android:textColor="@color/primary_darker"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_20"
            android:orientation="vertical"
            android:padding="@dimen/margin_10">

            <TextView
                android:id="@+id/txt_welcome_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cookie"
                android:text="@string/powered_by"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_welcome_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/graduate"
                android:text="@string/company_name"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_xxlarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_welcome_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cookie"
                android:text="@string/company_tag_line"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_xlarge"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>